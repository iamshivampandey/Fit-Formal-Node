INSERT INTO UnstitchedFabricProducts (
    title, brand_id, category_id, sku, style_code, model_name, product_type,
    color, brand_color, fabric, fabric_purity, composition, pattern,
    stitching_type, ideal_for, unit, top_length_value, top_length_unit,
    sales_package, short_description, long_description, is_active, created_at, updated_at
)
OUTPUT INSERTED.id
VALUES (
    {{{sqlValue title}}},
    {{#if brand_id}}{{brand_id}}{{else}}NULL{{/if}},
    {{#if category_id}}{{category_id}}{{else}}NULL{{/if}},
    {{{sqlValue sku}}},
    {{{sqlValue style_code}}},
    {{{sqlValue model_name}}},
    {{{sqlValue product_type}}},
    {{{sqlValue color}}},
    {{{sqlValue brand_color}}},
    {{{sqlValue fabric}}},
    {{{sqlValue fabric_purity}}},
    {{{sqlValue composition}}},
    {{{sqlValue pattern}}},
    {{{sqlValue stitching_type}}},
    {{{sqlValue ideal_for}}},
    {{#if unit}}{{{sqlValue unit}}}{{else}}'meter'{{/if}},
    {{#if top_length_value}}{{top_length_value}}{{else}}NULL{{/if}},
    {{#if top_length_unit}}{{{sqlValue top_length_unit}}}{{else}}'m'{{/if}},
    {{{sqlValue sales_package}}},
    {{{sqlValue short_description}}},
    {{{sqlValue long_description}}},
    {{#if is_active}}1{{else}}0{{/if}},
    '{{created_at}}',
    '{{updated_at}}'
);

